generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Post {
  id Int @unique @id @default(autoincrement())
  title String
  description String
  image String
  likesCount Int
  tags TagsOnPosts[]
}
model Tag {
  id Int @unique @id @default(autoincrement())
  name String
  posts TagsOnPosts[]
}

model TagsOnPosts {
  post Post @relation(fields: [postId], references: [id])
  postId Int
  tag Tag @relation(fields: [tagId], references: [id])
  tagId Int
  @@id([postId, tagId])
}