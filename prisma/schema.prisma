generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Post {
  id Int @unique @id @default(autoincrement())
  title String
  description String
  image String
  likesCount Int
  tags TagsOnPosts[]
  createdBy User @relation(fields: [createdById], references: [id])
  createdById Int
  likedBy PostLike[]
  comments Comment[]
}
model Tag {
  id Int @unique @id @default(autoincrement())
  name String
  posts TagsOnPosts[]
}

model TagsOnPosts {
  post Post @relation(fields: [postId], references: [id])
  postId Int
  tag Tag @relation(fields: [tagId], references: [id])
  tagId Int
  @@id([postId, tagId])
}


model User {
  id Int @unique @id @default(autoincrement())
  firstName String 
  secondName String 
  email String @unique
  avatar String 
  password String 
  isAdmin Boolean @default(false)
  createdPosts Post[]
  likedPosts PostLike[]
  comments Comment[]
}

model PostLike {
  post Post @relation(fields: [postId], references: [id])
  postId Int
  user User @relation(fields: [userId], references: [id])
  userId Int
  @@id([postId, userId])
}

model Comment {
  id Int @unique @id @default(autoincrement())
  body String
  createdAt DateTime @default(now())
  post Post @relation(fields: [postId], references: [id])
  postId Int
  user User @relation(fields: [userId], references: [id])
  userId Int
}